<div id= "notice"><%= notice %></div>

<h1> Posts </h1>

<ul>
<% @posts.each do |post| %>
<li>
<%= link_to post.title, post_path(post) %>
<%= post.content.to_s.slice(0,20) %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Delete', post, :confirm => 'Sure?',
                            :method => :delete,
                            :remote => true  %>
</li>
<% end %>
</ul>

<%= link_to 'ホームへ戻る', root_path %> |<%= link_to 'Blogトップ', posts_path %> | <%= link_to '新規作成', new_post_path %>

